#!/usr/bin/env bash
set -e

thisfile=$( readlink "${BASH_SOURCE[0]}" ) || thisfile="${BASH_SOURCE[0]}"
MDC_BASEDIR="$( cd "$( dirname "$thisfile" )/../" && pwd -P )"
export MDC_BASEDIR="${MDC_BASEDIR}"

source "${MDC_BASEDIR}/bin/include/check.sh"

if [ -f "public/admin/tool/phpunit/cli/util.php" ]; then
    public="public/"
else
    public=""
fi

$MDC_BASEDIR/bin/mdc exec webserver php ${public}admin/tool/phpunit/cli/util.php "$@"
